# Environment configuration for poker bot
# Copy this file to .env and fill in your values

# OpenAI API Key (required for vision-based game state detection)
OPENAI_API_KEY=your_openai_api_key_here

# Game Settings
STARTING_STACK=1000
SMALL_BLIND=10
BIG_BLIND=20

# Training Settings
NUM_EPISODES=1000
BATCH_SIZE=32

# Directories
SCREENSHOT_DIR=screenshots
MODEL_DIR=models
LOG_DIR=logs

# Model Path (optional - path to pre-trained model)
# MODEL_PATH=models/model_final.h5

# Logging
VERBOSE=true
